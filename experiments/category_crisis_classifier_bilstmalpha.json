{
  "dataset_reader": {
    "type": "cc_tweets"
  },
  "train_data_path": "dataset/train_fixtures.json",
  "validation_data_path": "dataset/train_fixtures.json",
  "model": {
    "type": "category_crisis_classifier",
    "threshold": 0.1,
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": true
        }
      }
    },
    "text_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "classifier_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [
        200,
        25  //the number of information types in output layer
      ],
      "activations": [
        "relu",
        "linear"
      ],
      "dropout": [
        0.5,
        0.0
      ]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [
      [
        "text",
        "num_tokens"
      ]
    ],
    "padding_noise": 0.0,
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 5,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "-loss",
    "optimizer": {
      "type": "adagrad"
    }
  },
  "vocabulary": {
    "min_count": {"tokens": 3}
  }
}